<turbo-frame id="savesTable">
    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>Created</th>
            <th>Session Name</th>
            <th>Month / Year</th>
            <th>Configuration</th>
            <th>Type</th>
            <th class="text-center">Quick Actions</th>
        </tr>
        </thead>
        <tbody>
        {% if gameSaves is empty %}
            <tr>
                <td colspan="8">No saves yet. Click on "Upload session save" to upload a session save you've stored locally, or create a save from a session you created under Sessions.</td>
            </tr>
        {% endif %}
        {% for gameSave in gameSaves %}
            <tr>
                <td>{{ gameSave.saveTimestamp|date("Y-m-d H:i:s") }} </td>
                <td>{{ gameSave.name }}</td>
                <td>{{ gameSave.gameCurrentMonthPretty }}</td>
                <td>{{ gameSave.gameConfigFilesFilename }}</td>
                <td>{{ gameSave.saveType }}</td>
                <td class="text-center">
                    <button class="btn btn-secondary btn-sm" 
                        data-session="{{ gameSave.id }}" 
                        data-action="">
                        <i class="fa fa-info-circle" title= "Save details"></i>
                    </button>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</turbo-frame>