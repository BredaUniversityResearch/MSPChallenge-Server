{% extends 'base.html.twig' %}

{% block subtitle %}Configurations{% endblock %}

{% block body %}
<div {{ stimulus_controller('modal-gameconfig') }}>
    <div class="row">
        <div class="py-1">
            <button type="button" class="btn btn-primary" data-action="modal-gameconfig#openNewConfigModal">
                <i class="fa fa-plus-circle" title="Upload new configuration"></i>
                Upload new configuration
            </button>
        </div>
        <div class="col-md-12 py-2">
        <div class="pull-right">Filter:
            <span id="radioFilter">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" value="active" checked
                            data-action="list-default#applyFilter" data-frame="turbo-frame#configsTable" data-href="{{ path('manager_gameconfig_list', {'visibility': 'active'}) }}">
                    <label class="form-check-label" for="inlineRadio1">Active</label>
                </div>
                <div class="form-check form-check-inline mx-0">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" value="archived"
                           data-action="list-default#applyFilter" data-frame="turbo-frame#configsTable" data-href="{{ path('manager_gameconfig_list', {'visibility': 'archived'}) }}">
                    <label class="form-check-label" for="inlineRadio3">Archived</label>
                </div>
            </span>
        </div>
        <div>
            Here you can upload a new MSP Challenge session configuration file, and administer existing ones.
        </div>
    </div>
        <div class="col-md-12">
        <div class="table-responsive">
            <turbo-frame id="configsTable" src="{{ path('manager_gameconfig_list', {'visibility': 'active'}) }}">
                <h1>Loading... <i class="fa fa-spinner fa-pulse"></i></h1>
            </turbo-frame>
        </div>
    </div>
    {{ include('manager/modal_default.html.twig') }}
</div>
{% endblock %}