{% extends 'base.html.twig' %}

{% block subtitle %}Errors{% endblock %}

{% block body %}
<div class="container-fluid px-4" data-controller="logs">
    <div class="col-md-12 py-2">
        Here you can see all error logs generated by the system.
    </div>
    <div class="col-md-12 py-2">
        <a id="toggle-errors" href="javascript:void(0)" role="button" class="badge text-bg-danger" data-action="click->logs#toggleErrors">Errors</a>
        <a id="toggle-warnings" href="javascript:void(0)" role="button" class="badge text-bg-warning" data-action="click->logs#toggleWarnings">Warnings</a>
    </div>
    <div class="col-md-12">
        <div class="table-responsive" style="height: calc(100vh - 500px); overflow-y: auto;">
            <table class="table table-hover table-striped" id="logs-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Created</th>
                        <th>Channel</th>
                        <th>Message</th>
                    </tr>
                </thead>
                <tbody data-logs-target="logs">
                    <tr id="no-logs-message">
                        <td colspan="4" class="text-center text-bg-light">No errors or warnings!</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
