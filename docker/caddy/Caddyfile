{
    # Debug
    {$CADDY_DEBUG}
}

{$SERVER_NAME}

{$CADDY_EXTRA_CONFIG}

log

# see https://caddyserver.com/docs/v2-upgrade
#   "Websocket proxying "just works" in v2; there is no need to "enable" websockets (upgrade connection) like in v1."
route {$URL_WS_SERVER_URI}* {
    reverse_proxy http://php:{$WS_SERVER_PORT} {
        # Caddy applies header normalization:
        #   e.g. GameSessionId => Gamesessionid, MSPAPIToken => Mspapitoken
        # So, add new headers using the Train Case (HTTP Header Case)
        header_up Game-Session-Id {http.request.header.Gamesessionid}
        header_up Msp-Api-Token {http.request.header.Mspapitoken}
    }
}

route {
    root * /srv/app/public
    mercure {
        # Transport to use (default to Bolt)
        transport_url {$MERCURE_TRANSPORT_URL:bolt:///data/mercure.db}
        # Publisher JWT key
        publisher_jwt {env.MERCURE_PUBLISHER_JWT_KEY} {env.MERCURE_PUBLISHER_JWT_ALG}
        # Subscriber JWT key
        subscriber_jwt {env.MERCURE_SUBSCRIBER_JWT_KEY} {env.MERCURE_SUBSCRIBER_JWT_ALG}
        # Allow anonymous subscribers (double-check that it's what you want)
        anonymous
        # Enable the subscription API (double-check that it's what you want)
        subscriptions
        # Extra directives
        {$MERCURE_EXTRA_DIRECTIVES}
    }
    vulcain
    push
    php_fastcgi unix//var/run/php/php-fpm.sock
    encode zstd gzip
    file_server
}
