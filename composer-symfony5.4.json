{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": 
    {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-zip": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "cboden/ratchet": "^0.4",
        "clue/http-proxy-react": "^1.7",
        "drift/dbal": "dev-feature/added-connection-pool",
        "gasparesganga/php-shapefile": "3.3.3",
        "illuminate/collections": "^8.73.2",
        "react/http": "^1.5",
        "react/mysql": "^0.5.6",
        "symfony/console": "5.4.*",
        "symfony/dotenv": "5.4.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.4.*",
        "symfony/runtime": "5.4.*",
        "symfony/yaml": "5.4.*"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "platform": {
            "php": "7.4"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [ "src/functions.php" ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/",
            "App\\Domain\\API\\": "api"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts",
            "bash tools/cghooks-fresh-install.sh"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "bash tools/cghooks-fresh-install.sh"
        ],
        "cghooks": "vendor/bin/cghooks"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "hooks": {
           "config": {
               "stop-on-failure": ["pre-push"]
           },
           "post-merge": [
               "bash install.sh"
           ],
           "pre-push": [
               "bash test.sh"
           ]
        },
        "symfony": {
            "allow-contrib": false,
            "require": "5.4.*"
        }
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.8",
        "symfony/stopwatch": "5.4.*",
        "symfony/web-profiler-bundle": "5.4.*",
	    "squizlabs/php_codesniffer": "3.*"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:marinhekman/reactphp-dbal.git"
        }
    ]
}
